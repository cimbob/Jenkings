.form-group
    label(for="documentTitle") Titre du document
    input.form-control#documentTitle(type="text", name="documentTitle", value=(doc ? doc.title ))

.form-group
    label(for="documentAuthor") Auteur
    select.form-control#documentAuthor(name="documentAuthor")
        each val in authors
            option(value=val.id, selected=((doc) && (val.id == doc.author.id))) = val.firstName + " " + val.lastName + "<" + val.nickname + ">"

.form-group
    label(for="documentBody") Corps du document
    textarea.form-control#documentBody(name="documentBody")= (doc ? "" : doc.body)
