.form-group
  label.control-label(for="documentTitle") Titre du document
  input.form-control#documentTitle(type="text", name="documentTitle", value=doc.title)

.form-group
  label.control-label(for="documentAuthor") Auteur
  select.form-control#documentAuthor(name="documentAuthor")
    each val in authors
      option(value=val.id, selected=(val.id == doc.DOC_AUTHOR))
        | #{val.firstName} #{val.lastName} #{"<" + val.nickname + ">"}

.form-group
  label.control-label(for="documentBody") Corps du document
  textarea.form-control#documentBody(style="max-width:100%; font-family:monospace;", name="documentBody")= doc.body
